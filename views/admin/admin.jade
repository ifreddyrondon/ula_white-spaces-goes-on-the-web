extends ../layout

block content
	.back
		a(href="/")
			img(src="images/back.png")
	.right-side-screen.middleHeadline
		a(href="/logout")	Logout
	.left-side-screen
		.button_wrapper(align="center")
			.button_underneath.grey(style="padding-top:10;width:146px;height:15px")
				a(href="/edit_zones", class="button grey", style="width:180;height:18px;padding-top:6px") Edit Zones
		br
		br
		br
		.button_wrapper(align="center")
			.button_underneath.orange(style="padding-top:10;width:146px;height:15px")
				a(href="/edit_account", class="button orange", style="width:180;height:18px;padding-top:6px") Edit Account
	.top-center-screen
		center
			br
			span.largeHeadline	Upload data
	.center-screen
		form(id="form-sync", class="font", enctype="multipart/form-data")
			center
				- if (typeof(places) !== 'undefined')
					fieldset(class="radio-container-wide")
						.radio-options
							.toggle	Zone
							ul
								- if (typeof(places) !== 'undefined')
									- each place in places
										li
											input(type="radio", name="zona_admin", id="#{place.name}", value="#{place.name}")
											label(for="#{place.name}")	#{place.name}
					.middleHeadline	or add a zone
					br
					input(id="new_zone", name="new_zone", autocorrect="on", class="ipt_zones border_user ipt_font", type="text", value="", alt="You must enter a zone")
					br
					br
				else
					.middleHeadline	No aggregates places, add one
					br
					input(id="new_zone", name="new_zone", autocorrect="on", class="ipt_zones border_user ipt_font", type="text", value="", alt="You must enter a zone")
			br	
			input(type="file", multiple="multiple", name="data_measures", id="data_measures")
			br
			br
			.button_wrapper(align="center")
				.button_underneath.blue(style="width:162px;height:14px")
					input(id="sync-enviar", type="submit", value="Synchronize", class="button blue", style="width:200px;height:40px;padding-top:6px")
		br
		br
		br
		.error
		.success
			center	Successful synchronization
			br
			center
				a(id="success-got-it", href="javascript:void(0)", class="button-success")	Got it
